{
  "name": "extractMD",
  "version": "1.0.0",
  "description": "A Chrome extension that extracts and copies content as Markdown from any webpage. Built-in support for YouTube, Hacker News, and articles, with a floating button and rich settings.",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:all": "npm run test:run && npm run test:e2e",
    "build": "node build.js",
    "build:prod": "node build.js --production",
    "watch": "esbuild extension/content.js --bundle --outfile=extension/dist/content.js --format=iife --sourcemap --watch --loader:.svg=text",
    "package": "node scripts/package.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miguelcorderocollar/yt-transcript-extension.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/miguelcorderocollar/yt-transcript-extension/issues"
  },
  "homepage": "https://extractmd.miguelcorderocollar.com/",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.25.5",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "gpt-tokenizer": "^3.0.1",
    "turndown": "^7.2.2"
  }
}
