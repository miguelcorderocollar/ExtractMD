{
  "manifest_version": 3,
  "name": "ExtractMD",
  "version": "1.1",
  "description": "Extract and copy content as Markdown from any webpage. Built-in support for YouTube, Hacker News, and articles.",
  "permissions": ["activeTab", "storage", "clipboardWrite", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ExtractMD: Copy Info as Markdown",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "copy-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Copy content as Markdown"
    },
    "hide-content": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Toggle ExtractMD button for this domain (hide/show)"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "homepage_url": "https://extractmd.miguelcorderocollar.com/"
}
